<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link rel="stylesheet" type="text/css" href="/css/adminpage.css">
    <script type="text/javascript" src="/admin/responsedata.js"></script>
    <title>SMUMH Survey Responses</title>
</head>
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container px-5">
            <a class="navbar-brand" href="/index.html">
                <img src="assets/ProvoSMUMHLogoInner.png" class='icon-img' style="width: 100px;"><img src="assets/image.png" class="icon-img" style="width:160px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="/index.html">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/survey.html">Survey</a></li>
                    <li class="nav-item"><a class="nav-link" href="/dashboard.html">Learn More</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div style="margin-left: 40px; margin-bottom: 15px;">
        <button type="button" onclick="changePage(currentPage - 1)" style="padding: 6px; font-size: small;">PREVIOUS</button>
        <button type="button" onclick="changePage(currentPage + 1)" style="padding: 6px; font-size: small;">NEXT</button>
    </div>
    <table id="surveyTable" class="table table-striped table-bordered table-hover" style="width:95%; margin: auto; margin-bottom: 40px;">
        <thead>
            <tr style="font-size: smaller;">
                <th>ID</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Relationship</th>
                <th>Occupation</th>
                <th>Organization Types</th>
                <th>Uses Social Media</th>
                <th>Platforms</th>
                <th>Average Time Spent</th>
                <th>Q9</th>
                <th>Q10</th>
                <th>Q11</th>
                <th>Q12</th>
                <th>Q13</th>
                <th>Q14</th>
                <th>Q15</th>
                <th>Q16</th>
                <th>Q17</th>
                <th>Q18</th>
                <th>Q19</th>
                <th>Q20</th>
            </tr>
        </thead>
        <tbody>
            <% for (let iCount = 0; iCount < responses.length; iCount++) { %>
                <tr class="page-<%= Math.floor(iCount / 25) %> response-page">
                  <td><%= responses[iCount].ResponseID %></td>  
                  <td><%= responses[iCount].Age %></td>
                  <td><%= responses[iCount].Gender %></td>
                  <td><%= responses[iCount].Relationship %></td>
                  <td><%= responses[iCount].Occupation %></td>
                  <td><%= responses[iCount].Age %></td>
                  <td style="text-align: center;"><%= responses[iCount].UseSocial ? 'Yes' : 'No'; %></td>
                  <td><%= responses[iCount].Age %></td>
                  <td style="text-align: center;"><%= responses[iCount].AvgTimePerDay %></td>
                  <% for (let questionIndex = 9; questionIndex <= 20; questionIndex++) { %>
                  <td style="text-align: center;">
                    <%= responses[iCount][`Q${questionIndex}`] %>
                  </td>
                  <% } %>
                </tr>
             <% } %>
        </tbody>
    </table>
    <!-- Footer-->
    <footer class="py-3" style="background-color: #00a0e089">
        <div class="container px-4 px-lg-5"><p class="m-0 text-center text-white">Copyright &copy; BYU Provo SMUMH 2023</p></div>
    </footer>
</body>
</html>